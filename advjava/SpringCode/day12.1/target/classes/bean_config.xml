<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- dependency bean -->
	
	
	<bean id="eng" class="com.cdac.dependency.EnglishTeacher" lazy-init="true"/>
<!--  maths teacher singleton lazy  -->
<bean id="maths" class="com.cdac.dependency.MathsTeacher" lazy-init="true"/>
<!--  sc teacher prototype  -->
<bean id="sc" class="com.cdac.dependency.ScienceTeacher" scope="prototype"/>
<!--  dependency bean  -->
<!--  cricket singleton n lazy  -->
<bean id="cricket" class="com.cdac.dependency.CricketCoach" lazy-init="true"/>
<!--  football prototype  -->
<bean id="football" class="com.cdac.dependency.FootballCoach" scope="prototype"/>
<!--  swimming prototype  -->
<bean id="swimming" class="com.cdac.dependency.SwimmingCoach" scope="prototype"/>
<!--  dependent bean singleton n eager  -->
<bean id="public_school" class="com.cdac.dependent.PublicSchool" init-method="myInit" destroy-method="myDestroy">
<!--  constructor based D.I  -->
<constructor-arg name="myCoach" ref="football"/>
<constructor-arg name="money" value="1234567890"/>
<!--  optional depcy  -->
<property name="subjectTeacher" ref="eng"/>
</bean>
</beans>
				
